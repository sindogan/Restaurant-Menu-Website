@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}
<section class="wrapper">
    <!-- page start-->
    <div class="row">
        <form class="form-horizontal" action="@Url.Action("Kaydet","AdminKategoriGuncelle")" method="post">
            <div class="col-md-6">
                <section class="panel">
                    <header class="panel-heading">
                       KATEGORİ BİLGİLERİ GÜNCELLE
                    </header>
                    <div class="panel-body">
                        <div class="form">
                            <div class="form-group">

                                <div class="col-md-6">
                                    <label class="col-sm-12 control-label col-sm-12">Kategori Adı</label>
                                    <input type="hidden" name="Id" value="@ViewBag.Kategori.Id" />
                                    <input type="text" name="Adi" value="@ViewBag.Kategori.Adi" class="form-control" style="color:#000" />
                                </div>

                            </div>
                            <div class="panel-body text-right">
                                <a href="@Url.Action("Index","AdminKategori")" class="btn btn-danger"><i class="icon-cancel"></i> İptal</a>
                                <button type="submit" class="btn btn-info "><i class="icon-save"></i> Kaydet</button>

                            </div>

                        </div>

                    </div>

                </section>

            </div>
        </form>
    </div>
</section>


