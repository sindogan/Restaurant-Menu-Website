<!DOCTYPE html>


<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewBag.Title - @(ViewBag.IletisimBilgileriListesi != null ? ((List<WebApp.Models.IletisimBilgileri>)ViewBag.IletisimBilgileriListesi).FirstOrDefault()?.Adi ?? "ÇİÇEK WAFFLE" : "ÇİÇEK WAFFLE")</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Amatic+SC:wght@400;700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">
</head>

<body class="index-page">

    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container position-relative d-flex align-items-center justify-content-between">

            <a href="~/" class="logo d-flex align-items-center me-auto me-xl-0">
                <h1 class="sitename">@((ViewBag.IletisimBilgileriListesi != null ? ((List<WebApp.Models.IletisimBilgileri>)ViewBag.IletisimBilgileriListesi).FirstOrDefault()?.Adi ?? "ÇİÇEK WAFFLE" : "ÇİÇEK WAFFLE").ToUpper())</h1>
                <span></span>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="#hero" class="active">Anasayfa</a></li>
                    <li><a href="#menu">Menu</a></li>
                    <li><a href="#contact">İletişim</a></li>
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

            <a class="btn-getstarted" href="#book-a-table">Rezervasyon</a>

        </div>
    </header>

    <main class="main">

        <!-- Hero Section -->
        <section id="hero" class="hero section light-background">
            <div class="container">
                <div class="row gy-4 justify-content-center justify-content-lg-between">
                    <div class="col-lg-5 order-2 order-lg-1 d-flex flex-column justify-content-center">
                        <h1 data-aos="fade-up">@(ViewBag.IletisimBilgileriListesi != null ? ((List<WebApp.Models.IletisimBilgileri>)ViewBag.IletisimBilgileriListesi).FirstOrDefault()?.Slogan ?? "EŞSİZ LEZZETLERİN<br>TADINI ÇIKARIN" : "EŞSİZ LEZZETLERİN<br>TADINI ÇIKARIN")</h1>
                        <p data-aos="fade-up" data-aos-delay="100">@(ViewBag.IletisimBilgileriListesi != null ? ((List<WebApp.Models.IletisimBilgileri>)ViewBag.IletisimBilgileriListesi).FirstOrDefault()?.Aciklama ?? "Biz, tatlıya aşk katan, her waffle'ı eğlence ve lezzetle buluşturan bir ekibiz" : "Biz, tatlıya aşk katan, her waffle'ı eğlence ve lezzetle buluşturan bir ekibiz")</p>
                        <div class="d-flex" data-aos="fade-up" data-aos-delay="200">
                            <a href="#book-a-table" class="btn-get-started">Rezervasyon</a>
                        </div>
                    </div>
                    <div class="col-lg-5 order-1 order-lg-2 hero-img" data-aos="zoom-out">
                        <img src="~/assets/img/menu/waffle.png" class="img-fluid animated" alt="">
                    </div>
                </div>
            </div>
        </section><!-- /Hero Section -->
        <!-- Menu Section -->
        <section id="menu" class="menu section">
            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Menümüz</h2>
                <p><span>Eşsiz Lezzetlerimizi</span> <span class="description-title">Keşfet!</span></p>
            </div><!-- End Section Title -->

            <div class="container">
                <!-- Dynamic Category Tabs -->
                <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="100">
                    @if (ViewBag.KategoriListesi != null)
                    {
                        var kategoriler = (List<Kategori>)ViewBag.KategoriListesi;
                        for (int i = 0; i < kategoriler.Count; i++)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(i == 0 ? "active show" : "")" data-bs-toggle="tab" data-bs-target="#menu-kategori-@kategoriler[i].KategoriId">
                                    <h4>@kategoriler[i].KategoriAdi</h4>
                                </a>
                            </li>
                        }
                    }
                </ul>

                <!-- Dynamic Tab Content -->
                <div class="tab-content" data-aos="fade-up" data-aos-delay="200">
                    @if (ViewBag.KategoriListesi != null && ViewBag.UrunListesi != null)
                    {
                        var kategoriler = (List<Kategori>)ViewBag.KategoriListesi;
                        var urunler = (List<Urun>)ViewBag.UrunListesi;

                        for (int i = 0; i < kategoriler.Count; i++)
                        {
                            var kategori = kategoriler[i];
                            var kategoriUrunleri = urunler.Where(u => u.KategoriId == kategori.KategoriId).ToList();

                            <div class="tab-pane fade @(i == 0 ? "active show" : "")" id="menu-kategori-@kategori.KategoriId">
                                <div class="tab-header text-center">
                                    <p>Menu</p>
                                    <h3>@kategori.KategoriAdi</h3>
                                    @if (!string.IsNullOrEmpty(kategori.KategoriAciklama))
                                    {
                                        <p class="category-description">@kategori.KategoriAciklama</p>
                                    }
                                </div>

                                <div class="row gy-5">
                                    @foreach (var urun in kategoriUrunleri)
                                    {
                                        <div class="col-lg-4 menu-item">
                                            @if (!string.IsNullOrEmpty(urun.Resim))
                                            {
                                                <a href="~/assets/img/menu/@urun.Resim" class="glightbox">
                                                    <img src="~/assets/img/menu/@urun.Resim" class="menu-img img-fluid" alt="@urun.UrunAdi">
                                                </a>
                                            }
                                            else
                                            {
                                                <div class="menu-img-placeholder d-flex align-items-center justify-content-center">
                                                    <i class="bi bi-image" style="font-size: 3rem; color: #ccc;"></i>
                                                </div>
                                            }
                                            <h4>@urun.UrunAdi</h4>
                                            @if (!string.IsNullOrEmpty(urun.Aciklama))
                                            {
                                                <p class="ingredients">@urun.Aciklama</p>
                                            }
                                            <p class="price">@urun.Fiyat.ToString("C")</p>
                                        </div>
                            
                                        <!-- Menu Item -->
                                    }
                                </div>
                            </div>
                    
                            <!-- End Category Menu Content -->
                        }
                    }
                </div>
            </div>
        </section><!-- /Menu Section -->
        <!-- Book A Table Section -->
        <section id="book-a-table" class="book-a-table section">
            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Rezervasyon</h2>
                <p><span>Hemen</span> <span class="description-title">Rezervasyon Yaptır</span></p>
            </div><!-- End Section Title -->

            <div class="container">
                <div class="row g-0" data-aos="fade-up" data-aos-delay="100">
                    <div class="col-lg-4 reservation-img" style="background-image: url(../assets/img/reservation.jpg);"></div>

                    <div class="col-lg-8 d-flex align-items-center reservation-form-bg" data-aos="fade-up" data-aos-delay="200">
                        <form action="~/forms/book-a-table.php" method="post" role="form" class="php-email-form">
                            <div class="row gy-4">
                                <div class="col-lg-4 col-md-6">
                                    <input type="text" name="name" class="form-control" id="name" placeholder="Adı-Soyadı" required="">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="email" class="form-control" name="email" id="email" placeholder="Email Adresi" required="">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="text" class="form-control" name="phone" id="phone" placeholder="Telefon Numarası" required="">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="date" name="date" class="form-control" id="date" placeholder="Tarih" required="">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="time" class="form-control" name="time" id="time" placeholder="Saat" required="">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="number" class="form-control" name="people" id="people" placeholder="# kişi sayısı" required="">
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <textarea class="form-control" name="message" rows="5" placeholder="Mesaj"></textarea>
                            </div>

                            <div class="text-center mt-3">
                                <div class="loading">Yükleniyor</div>
                                <div class="error-message"></div>
                                <div class="sent-message">Rezervasyon talebiniz gönderildi. Onaylamak için sizi arayacağız veya e-posta göndereceğiz. Teşekkür ederiz!</div>
                                <button type="submit">Rezervasyon</button>
                            </div>
                        </form>
                    </div><!-- End Reservation Form -->
                </div>
            </div>
        </section><!-- /Book A Table Section -->
        <!-- Contact Section -->
        <section id="contact" class="contact section">
            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>İletişim</h2>
                <p><span>Tüm İhtiyaçlarınız İçin</span> <span class="description-title">Bizimle İletişime Geçin</span></p>
            </div><!-- End Section Title -->

            <div class="container" data-aos="fade-up" data-aos-delay="100">
                @if (ViewBag.IletisimBilgileriListesi != null)
                {
                    var iletisimBilgileri = ((List<WebApp.Models.IletisimBilgileri>)ViewBag.IletisimBilgileriListesi).FirstOrDefault();
                    if (iletisimBilgileri != null)
                    {
                        <!-- Google Maps -->
                        <div class="mb-5">
                            @if (!string.IsNullOrEmpty(iletisimBilgileri.GoogleMapsBaglanti))
                            {
                                <iframe style="width: 100%; height: 400px;" src="@iletisimBilgileri.GoogleMapsBaglanti" frameborder="0" allowfullscreen=""></iframe>
                            }
                            else
                            {
                                <iframe style="width: 100%; height: 400px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen=""></iframe>
                            }
                        </div>

                        <!-- End Google Maps -->

                        <div class="row gy-4">
                            <!-- Address -->
                            <div class="col-md-6">
                                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="200">
                                    <i class="icon bi bi-geo-alt flex-shrink-0"></i>
                                    <div>
                                        <h3>Adres</h3>
                                        <p>@(iletisimBilgileri.Adres ?? "Adres bilgisi bulunamadı")</p>
                                    </div>
                                </div>
                            </div><!-- End Info Item -->
                            <!-- Phone -->
                            <div class="col-md-6">
                                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="300">
                                    <i class="icon bi bi-telephone flex-shrink-0"></i>
                                    <div>
                                        <h3>Bizi Arayın</h3>
                                        @if (!string.IsNullOrEmpty(iletisimBilgileri.Telefon1))
                                        {
                                            <p>@iletisimBilgileri.Telefon1</p>
                                        }
                                        @if (!string.IsNullOrEmpty(iletisimBilgileri.Telefon2))
                                        {
                                            <p>@iletisimBilgileri.Telefon2</p>
                                        }
                                    </div>
                                </div>
                            </div><!-- End Info Item -->
                            <!-- Email -->
                            <div class="col-md-6">
                                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="400">
                                    <i class="icon bi bi-envelope flex-shrink-0"></i>
                                    <div>
                                        <h3>Eposta</h3>
                                        <p>@(iletisimBilgileri.Email1 ?? "info@example.com")</p>
                                        @if (!string.IsNullOrEmpty(iletisimBilgileri.Email2))
                                        {
                                            <p>@iletisimBilgileri.Email2</p>
                                        }
                                    </div>
                                </div>
                            </div><!-- End Info Item -->
                            <!-- Opening Hours -->
                            <div class="col-md-6">
                                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="500">
                                    <i class="icon bi bi-clock flex-shrink-0"></i>
                                    <div>
                                        <h3>Açılış Saatleri</h3>
                                        <p><strong>Pzt-Cmt:</strong> 11.00 - 23.00<br><strong>Pazar:</strong> Kapalı</p>
                                    </div>
                                </div>
                            </div><!-- End Info Item -->
                        </div>
                    }
                }

                <!-- Contact Form -->
                <form action="~/forms/contact.php" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="600">
                    <div class="row gy-4">
                        <div class="col-md-6">
                            <input type="text" name="name" class="form-control" placeholder="Adı Soyadı" required="">
                        </div>
                        <div class="col-md-6">
                            <input type="email" class="form-control" name="email" placeholder="E-posta Adresi" required="">
                        </div>
                        <div class="col-md-12">
                            <input type="text" class="form-control" name="subject" placeholder="Konu" required="">
                        </div>
                        <div class="col-md-12">
                            <textarea class="form-control" name="message" rows="6" placeholder="Mesaj" required=""></textarea>
                        </div>
                        <div class="col-md-12 text-center">
                            <div class="loading">Yükleniyor</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Mesajın gönderildi.Teşekkürler!</div>
                            <button type="submit">Gönder</button>
                        </div>
                    </div>
                </form><!-- End Contact Form -->
            </div>
        </section><!-- /Contact Section -->
        @RenderBody()

    </main>

    <footer id="footer" class="footer dark-background">
        <div class="container">
            <div class="row gy-3">
                @if (ViewBag.IletisimBilgileriListesi != null)
                {
                    var iletisimBilgileri = ((List<WebApp.Models.IletisimBilgileri>)ViewBag.IletisimBilgileriListesi).FirstOrDefault();
                    if (iletisimBilgileri != null)
                    {
                        <!-- Address -->
                        <div class="col-lg-3 col-md-6 d-flex">
                            <i class="bi bi-geo-alt icon"></i>
                            <div class="address">
                                <h4>Adres</h4>
                                <p>@(iletisimBilgileri.Adres ?? "Adres bilgisi bulunamadı")</p>
                            </div>
                        </div>

                        <!-- Contact Info -->
                        <div class="col-lg-3 col-md-6 d-flex">
                            <i class="bi bi-telephone icon"></i>
                            <div>
                                <h4>İletişim</h4>
                                <p>
                                    @if (!string.IsNullOrEmpty(iletisimBilgileri.Telefon1))
                                    {
                                        <strong>Phone:</strong>
                                        <span>@iletisimBilgileri.Telefon1</span>

                                        <br>
                                    }
                                    @if (!string.IsNullOrEmpty(iletisimBilgileri.Email1))
                                    {
                                        <strong>Email:</strong>
                                        <span>@iletisimBilgileri.Email1</span>

                                        <br>
                                    }
                                </p>
                            </div>
                        </div>

                        <!-- Opening Hours -->
                        <div class="col-lg-3 col-md-6 d-flex">
                            <i class="bi bi-clock icon"></i>
                            <div>
                                <h4>Çalışma Saatleri</h4>
                                <p>
                                    <strong>Pzt-Cmt:</strong> <span>11.00 - 23.00</span><br>
                                    <strong>Pazar:</strong> <span>Kapalı!</span>
                                </p>
                            </div>
                        </div>

                        <!-- Social Media -->
                        <div class="col-lg-3 col-md-6">
                            <h4>Bizi Takip Et!</h4>
                            <div class="social-links d-flex">
                                @if (!string.IsNullOrEmpty(iletisimBilgileri.Twitter))
                                {
                                    <a href="@iletisimBilgileri.Twitter" class="twitter" target="_blank"><i class="bi bi-twitter-x"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(iletisimBilgileri.Facebook))
                                {
                                    <a href="@iletisimBilgileri.Facebook" class="facebook" target="_blank"><i class="bi bi-facebook"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(iletisimBilgileri.Instagram))
                                {
                                    <a href="@iletisimBilgileri.Instagram" class="instagram" target="_blank"><i class="bi bi-instagram"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(iletisimBilgileri.Linkedin))
                                {
                                    <a href="@iletisimBilgileri.Linkedin" class="linkedin" target="_blank"><i class="bi bi-linkedin"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(iletisimBilgileri.YouTube))
                                {
                                    <a href="@iletisimBilgileri.YouTube" class="youtube" target="_blank"><i class="bi bi-youtube"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(iletisimBilgileri.WhatsApp))
                                {
                                    <a href="@iletisimBilgileri.WhatsApp" class="whatsapp" target="_blank"><i class="bi bi-whatsapp"></i></a>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="container copyright text-center mt-4">
            <p>© <span>Copyright</span> <strong class="px-1 sitename">@(ViewBag.IletisimBilgileriListesi != null ? ((List<WebApp.Models.IletisimBilgileri>)ViewBag.IletisimBilgileriListesi).FirstOrDefault()?.Adi ?? "ÇİÇEK WAFFLE" : "ÇİÇEK WAFFLE")</strong> <span>All Rights Reserved</span></p>

            <div class="credits">
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                <a asp-controller="Admin" asp-action="Index" class="btn-link text-light ms-3">Kurumsal</a>

            </div>

        </div>
    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>
</html>