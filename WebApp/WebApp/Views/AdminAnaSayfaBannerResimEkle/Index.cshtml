@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}
@using (Html.BeginForm("Kaydet", "AdminAnaSayfaBannerResimEkle", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-10">
                <section class="panel">
                    <header class="panel-heading">
                        Resim Eke
                    </header>
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-group last">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-preview thumbnail" style="width: 400px; height: 200px;"></div>
                                    <div>
                                        <span class="btn btn-file">
                                            <i class="icon-paper-clip"></i>
                                            <span class="fileupload-new">
                                                Resim Seç
                                            </span>
                                            <span class="fileupload-exists">Değiştir</span>
                                            <input type="file" name="imagefile" class="default" multiple />
                                        </span>
                                        <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload"><i class="icon-trash" style="padding-right:5px"></i>Sil</a>
                                    </div>
                                    <div>
                                        <div class="col-sm-5">
                                            <label class="col-sm-2 control-label col-sm-2">BAŞLIK</label>
                                            <br />
                                            <input type="text" class="form-control" value="" name="Baslik" style="color:#000" />
                                        </div>
                                        <div class="col-sm-8">
                                            <label class="col-sm-2 control-label col-sm-2">METİN</label>
                                            <br />
                                         
                                            <input type="hidden" name="MetinId" value="0" />
                                            <textarea class="form-control ckeditor" name="Metin" style="color:#000" rows="24"></textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="row">

                            <button type="submit" class="btn btn-info">Kaydet</button>
                        </div>
                    </div>
                </section>
            </div>

        </div>
    </section>
}

